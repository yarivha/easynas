% layout 'default';

%if ($result eq "fail"){
<div class="alert alert-danger alert-dismissible">
 <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
 <%= $msg %>
</div>
 %}

 %if ($result eq "success"){
<div class="alert alert-success alert-dismissible">
 <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
 <%= $msg %>
</div>
 %}


<div class="row">
                        <div class="col-lg-12">
                                <!-- /.panel-heading -->
                                    <div class="table-responsive">
                                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                            <thead>
                                                <tr>
						<th></th>
						<th><%= ($TEXT->{'users_id'}) %></th>
						<th><%= ($TEXT->{'users_name'}) %></th>
						<th><%= ($TEXT->{'users_desc'}) %></th>
						<th><%= ($TEXT->{'users_groups'}) %></th>
						<th><%= ($TEXT->{'users_actions'}) %></th>
                                                </tr>
                                            </thead>
                                            <tbody>
						% foreach my $user (keys (%$users)) {
                                                <tr>
						    <td><a href=?action=settings&username=<%= $users->{$user}[1] %><i class="fa fa-user fa-2x" title="<%= ($TEXT->{'users_settings'}) %>"></i></a></td>
						    <td><%= $users->{$user}[0] %></td>
						    <td><%= $users->{$user}[1] %></td>
						    <td><%= $users->{$user}[2] %></td>
						    <td><%= $users->{$user}[3] %></td>
						    <td>
						     <a href=?action=passwordmenu&username=<%= $users->{$user}[1] %>><i class="fa fa-key fa-2x" title="<%= ($TEXT->{'users_change_password'}) %>"></i>&nbsp;</a>
						     <a href=?action=settings&username=$<%= $users->{$user}[1] %>><i class="fa fa-sliders fa-2x" title="<%= ($TEXT->{'users_settings'}) %>"></i>&nbsp;</a>
						     <a onclick="return confirm('<%= ($TEXT->{'users_delete?'}) %>')" href=?action=deleteuser&username=<%= $users->{$user}[1] %>><i class="fa fa-trash fa-2x" title="<%= ($TEXT->{'users_delete'}) %>"></i></a>	
						     </td>
						</tr>
						%}
                                            </tbody>
                                        </table>
                                    </div>
				</div>
			</div>

			<br><br><a href="?action=createusermenu">[<%= ($TEXT->{'users_create'}) %>]</a>

