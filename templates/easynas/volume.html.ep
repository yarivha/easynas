% layout 'default';

%if ($result eq "fail"){
<div class="alert alert-danger alert-dismissible">
 <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
 <%= $msg %>
</div>
 %}

 %if ($result eq "success"){
<div class="alert alert-success alert-dismissible">
 <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
 <%= $msg %>
</div>
 %}


<div class="row">
                        <div class="col-lg-12">
                                <!-- /.panel-heading -->
                                    <div class="table-responsive">
                                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                            <thead>
                                                <tr>
						<th></th>
						<th><%= ($TEXT->{'disk'}) %></th>
						<th><%= ($TEXT->{'disk_type'}) %></th>
						<th><%= ($TEXT->{'disk_size'}) %></th>
						<th><%= ($TEXT->{'disk_status'}) %></th>
						<th><%= ($TEXT->{'disk_actions'}) %></th>
                                                </tr>
                                            </thead>
                                            <tbody>
					    % foreach my $vol (keys (%$volumes)) {
                                                <tr>
                                                    <td><a href="?action=settingsmenu&fs=<%= $vol %>"><i class="fa fa-database fa-2x" title="Settings"></i></a></td>
						    <td><a href="?action=settingsmenu&vol=<%= $vol %>"><%= $vol %></a></td>
						    <td><%= $volumes->{$vol}[1] %></td>
						    <td><%= $volumes->{$vol}[2] %></td>
						    <td><%= $volumes->{$vol}[3] %></td>
						    <td><%= $volumes->{$vol}[4] %></td>
                                                </tr>
						%} 
                                            </tbody>
                                        </table>
                                    </div>
				</div>
			</div>
<br><br><a href="?action=createvolmenu">[<%= ($TEXT->{'vol_create'}) %>]</a>


