[Unit]
Description=EasyNAS application
After=network.target

[Service]
Type=simple
User=admin
ExecStart=/easynas/script/easy_nas daemon -m production -l https://*:1443?cert=/etc/easynas/easynas.cert&key=/etc/easynas/easynas.key
ExecStartPre=echo "Starting EasyNAS..." >> /var/log/easynas/easynas.log
ExecStopPost=echo "Stoping EasyNAS..." >> /var/log/easynas/easynas.log

[Install]
WantedBy=multi-user.target
